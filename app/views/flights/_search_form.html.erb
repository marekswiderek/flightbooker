<%= form_with method: :get, url: root_path do |f| %>
  <div class="flex flex-col md:flex-row place-content-start md:px-0 max-w-full">
    <div class="border border-blue-300 border-1 bg-white p-1">
      <%= label_tag(:departure_airport_id, "Departure Airport", class: "bg-white text-gray-900") %>
      <%= f.select(:departure_airport_id, options_for_select(@airports_options), {}, { :class => "bg-white" }) %>
    </div>
    <div class="border border-blue-300 border-1 bg-white p-1">
      <%= label_tag(:arrival_airport_id, "Arrival Airport", class: "bg-white text-gray-900") %>
      <%= f.select(:arrival_airport_id, options_for_select(@airports_options), {}, { :class => "bg-white" }) %>
    </div>
    <div class="border border-blue-300 border-1 bg-white p-1">
      <%= label_tag(:departure_time, "Departure time", class: "bg-white text-gray-900") %>
      <%= f.datetime_field :departure_time, class: "bg-white" %>
    </div>
    <div class="border border-blue-300 border-1 bg-white p-1">
      <%= label_tag(:_passengers, "Number of passengers", class: "bg-white text-gray-900") %>
      <%= f.select(:_passengers, ((1..10).map { |i| [ i ] }), {}, { :class => "bg-white" }) %>
    </div>
    <%= f.submit value="SEARCH", class: "border-1 border-blue-300 bg-blue-300 w-auto xl:w-1/2 hover:bg-blue-400"  %>
  </div>
<% end %>